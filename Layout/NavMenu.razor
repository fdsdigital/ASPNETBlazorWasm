<header class="site-header">
    <div class="header-container">
        <a class="logo" href="">
            <span class="logo-icon">â—†</span>
            <span class="logo-text">FDS Digital</span>
        </a>
        
        <input type="checkbox" id="nav-toggle" class="nav-toggle" />
        <label for="nav-toggle" class="nav-toggle-label">
            <span></span>
        </label>

        <nav class="main-nav">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="CloseMenu">Home</NavLink>
            <NavLink class="nav-link" href="about" @onclick="CloseMenu">About</NavLink>
            <NavLink class="nav-link" href="services" @onclick="CloseMenu">Services</NavLink>
            <NavLink class="nav-link" href="portfolio" @onclick="CloseMenu">Portfolio</NavLink>
            <NavLink class="nav-link nav-cta" href="contact" @onclick="CloseMenu">Contact</NavLink>
        </nav>
    </div>
</header>

@code {
    private void CloseMenu()
    {
        // Use JS interop to uncheck the nav-toggle checkbox
        JS.InvokeVoidAsync("closeNavMenu");
    }

    [Inject]
    private IJSRuntime JS { get; set; }
}

@page "/contact"

<PageTitle>Contact Us - FDS Digital</PageTitle>

<div class="page-header">
    <h1>Get in <span class="accent">Touch</span></h1>
    <p class="page-subtitle">Ready to start your project? We'd love to hear from you.</p>
</div>

<section class="contact-section">
    <div class="contact-grid">
        <div class="contact-form-container">
            <h2>Send Us a Message</h2>
            <EditForm Model="@contactModel" OnValidSubmit="HandleSubmit" class="contact-form">
                <DataAnnotationsValidator />
                
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <InputText id="name" @bind-Value="contactModel.Name" class="form-control" placeholder="John Doe" />
                    <ValidationMessage For="@(() => contactModel.Name)" />
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <InputText id="email" @bind-Value="contactModel.Email" class="form-control" placeholder="john@example.com" />
                    <ValidationMessage For="@(() => contactModel.Email)" />
                </div>

                <div class="form-group">
                    <label for="company">Company (Optional)</label>
                    <InputText id="company" @bind-Value="contactModel.Company" class="form-control" placeholder="Your Company" />
                </div>

                <div class="form-group">
                    <label for="service">Service Interested In</label>
                    <InputSelect id="service" @bind-Value="contactModel.Service" class="form-control">
                        <option value="">Select a service...</option>
                        <option value="web">Web Development</option>
                        <option value="mobile">Mobile App Development</option>
                        <option value="cloud">Cloud & DevOps</option>
                        <option value="ai">AI & Machine Learning</option>
                        <option value="design">UI/UX Design</option>
                        <option value="other">Other</option>
                    </InputSelect>
                </div>

                <div class="form-group">
    <label for="budget">Project Budget</label>
    <InputSelect id="budget" @bind-Value="contactModel.Budget" class="form-control">
        <option value="">Select budget range...</option>
        <option value="100-500">$100 - $500</option>
        <option value="500-1500">$500 - $1,500</option>
        <option value="1500-5000">$1,500 - $5,000</option>
        <option value="5000-10000">$5,000 - $10,000</option>
        <option value="10000+">$10,000+</option>
    </InputSelect>
</div>


                <div class="form-group">
                    <label for="message">Project Details</label>
                    <InputTextArea id="message" @bind-Value="contactModel.Message" class="form-control" rows="5" placeholder="Tell us about your project..." />
                    <ValidationMessage For="@(() => contactModel.Message)" />
                </div>

                <button type="submit" class="btn-primary-custom submit-btn" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span>Sending...</span>
                    }
                    else
                    {
                        <span>Send Message</span>
                    }
                </button>

                @if (showSuccess)
                {
                    <div class="success-message">
                        ‚úì Thank you! We'll be in touch within 24 hours.
                    </div>
                }
            </EditForm>
        </div>

        <div class="contact-info">
            <div class="info-card">
                <h3>üìç Our Office</h3>
                <p>
                    371 Lexington Avenue<br />
                    Suite 14B<br />
                    New York, NY 10016
                </p>
            </div>

            <div class="info-card">
                <h3>üìß Email Us</h3>
                <p>
                    General: hello@fdsdigitalservices.com<br />
                </p>
            </div>

            <div class="info-card">
                <h3>üìû Call Us</h3>
                <p>
                    Main: (917) 504-9191<br />
                </p>
            </div>

            <div class="info-card">
                <h3>üïê Business Hours</h3>
                <p>
                    Monday - Friday: 9:00 AM - 6:00 PM PST<br />
                    Saturday - Sunday: Closed
                </p>
            </div>

        </div>
    </div>
</section>

@code {
    private ContactModel contactModel = new();
    private bool isSubmitting = false;
    private bool showSuccess = false;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        await Task.Delay(1500);
        isSubmitting = false;
        showSuccess = true;
        contactModel = new ContactModel();
        StateHasChanged();
    }

    public class ContactModel
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Company { get; set; } = "";
        public string Service { get; set; } = "";
        public string Budget { get; set; } = "";
        public string Message { get; set; } = "";
    }
}

